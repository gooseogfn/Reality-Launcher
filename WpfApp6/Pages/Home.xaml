<UserControl x:Class="WpfApp6.Pages.Home"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:WpfApp6.Pages"
             mc:Ignorable="d"
             Width="386" Height="364">

    <Grid Background="#1e1e1e" Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="3*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>

        <!-- Centered Image -->
        <Image Grid.Row="0"
               Width="146" Height="142"
               HorizontalAlignment="Center" VerticalAlignment="Center"
               Source="https://i.imgur.com/VzQXf0K.png"
               Stretch="Uniform" />

        <!-- Project Reality Text -->
        <TextBlock Grid.Row="1"
                   Text="Project Reality"
                   Foreground="White"
                   FontSize="24"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0,15,0,15"
                   TextWrapping="Wrap"/>

        <!-- Launch Button -->
        <Button Grid.Row="2"
                Content="Launch"
                Width="140" Height="45"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Background="#007ACC"
                Foreground="White"
                FontWeight="SemiBold"
                Click="Button_Click"
                Cursor="Hand"
                BorderThickness="0"/>
    </Grid>

</UserControl>
